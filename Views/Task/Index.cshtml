@{
    ViewData["Title"] = "Tasks";
}
@model List<ToDoList.Models.Task>

<h2>Your Tasks</h2>

<table>
    <tr>
        <th>
            <span>Title</span>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParam"]">▲▼</a>
        </th>
		<th>
            <span>DueDate</span>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["DueDateSortParam"]">▲▼</a>
        </th>
		<th>
            <span>Completed?</span>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["IsDoneSortParam"]">▲▼</a>
        </th>
		<th>
            <span>Category</span>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["CategorySortParam"]">▲▼</a>
        </th>
    </tr>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.DueDate.ToShortDateString()</td>
            <td>
                @if (task.IsDone)
                {
                    <span class="text-success">Done</span>
                }
                else
                {
                    <span class="text-warning">Not done</span>
                }
            </td>
            <td>@task.Category</td>
            <td>
                <form asp-action="ToggleDone" asp-route-id="@task.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-secondary">
                        @(task.IsDone ? "Mark as Not Done" : "Mark as Done")
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
